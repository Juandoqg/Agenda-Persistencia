<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/cajaBuscarModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Buscar por correo"
                android:inputType="text" />

            <Button
                android:id="@+id/botonVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="BuscarUsuario"
                android:text="Buscar" />

            <EditText
                android:id="@+id/cajaNombreModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu nombre"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaApellidoModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu apellido"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaDocumentoModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu documento"
                android:inputType="number" />

            <EditText
                android:id="@+id/cajaEdadModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu edad"
                android:inputType="number" />

            <EditText
                android:id="@+id/cajaTelefonoModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu telefono"
                android:inputType="number" />

            <EditText
                android:id="@+id/cajaDireccionModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu direccion"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaNacimientoModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu nacimiento"
                android:inputType="date" />

            <EditText
                android:id="@+id/cajaEmailModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escribe tu email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/labelEstadoModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado civil" />

            <RadioGroup
                android:id="@+id/radioGroupEstadoModi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cajaSolteroModi"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:text="Soltero" />

                <RadioButton
                    android:id="@+id/cajaCasadoModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Casado" />

            </RadioGroup>

            <TextView
                android:id="@+id/labelGeneroModi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Genero" />

            <RadioGroup
                android:id="@+id/radioGroupGeneroModi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cajaMasculinoModi"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:text="Masculino" />

                <RadioButton
                    android:id="@+id/cajaFemeninoModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Femenino" />

            </RadioGroup>

            <TextView
                android:id="@+id/labelGustosModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gustos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkMusicaModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Musica" />

                <CheckBox
                    android:id="@+id/checkDeporteModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deporte" />

                <CheckBox
                    android:id="@+id/checkCineModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkViajesModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Viajes" />

                <CheckBox
                    android:id="@+id/checkComidaModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comida" />

                <CheckBox
                    android:id="@+id/checkLibrosModi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Libros" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelSpinnerModi"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Equipo de futbol favorito" />

                <Spinner
                    android:id="@+id/spinnerModi"
                    android:layout_width="241dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/cajaPeliculaModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Pelicula favorito"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaColorModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Color favorito"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaComidaModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Comida favorita"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaLibroModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Libro favorito"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaCancionModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cancion favorita"
                android:inputType="text" />

            <EditText
                android:id="@+id/cajaDescripcionModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Descripcion personal"
                android:inputType="text" />

            <Button
                android:id="@+id/botonModificarModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="modificarUsuario"
                android:text="Modificar usuario" />

            <Button
                android:id="@+id/botonVolverModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="volver"
                android:text="Volver" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
